<div class="row">
  <div class="col-md-9">
    <%= image_tag(@idea.picture_url(:thumb)) if @idea.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
        <%= link_to '', edit_idea_path(@idea), class: "glyphicon glyphicon-pencil" %> |
        <%= link_to '', @idea, data: { confirm: 'Are you sure?' }, method: :delete, class: "glyphicon glyphicon-trash" %> |
        <%= link_to '', ideas_path, class: "glyphicon glyphicon-repeat" %>
    </p>
  </div>
</div>
<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render 'comments/form' %>